doctype html
html
    head
      style
        include style.css
        title= title
    body
    block content
.main.container
    .row
        .col-md-6.col-md-offset-3
            h1.display-4.m-b-2 Sign Up

            // register form
            form(method='POST' action='/register')
                div.form-group
                    label(for='device') Device:
                    input#name.form-control(type='text', placeholder='device #' name='device')
                    label(for='pw') Password:
                    input#pw.form-control(type='password' name='password')
                    button.btn.btn-primary(type='submit') Sign up
